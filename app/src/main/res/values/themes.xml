<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppetiserChallenge" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.Allx" parent="Theme.AppetiserChallenge" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Allx.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Allx</item>
    </style>
</resources>